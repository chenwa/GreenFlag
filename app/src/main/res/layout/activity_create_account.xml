<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAccount"
    android:background="#000000">

    <EditText
        android:id="@+id/activity_create_account_til_email"
        android:layout_width="340dp"
        android:layout_height="52dp"
        android:layout_marginTop="120dp"
        android:background="#FFFFFF"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_create_account_til_password"
        android:inputType="textPassword"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="@id/activity_create_account_til_email"
        app:layout_constraintTop_toTopOf="@id/activity_create_account_til_email"
        android:hint="@string/create_account_hint"/>

    <EditText
        android:id="@+id/activity_create_account_til_password_repeat"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginTop="120dp"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/activity_create_account_til_password"
        app:layout_constraintTop_toTopOf="@id/activity_create_account_til_password" />

    <TextView
        android:id="@+id/activity_create__account_textView"
        android:layout_width="343dp"
        android:layout_height="178dp"
        android:layout_marginTop="20dp"
        android:text="@string/create_account_criteria"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/activity_create_account_til_password_repeat"
        app:layout_constraintTop_toBottomOf="@+id/activity_create_account_til_password_repeat" />

    <ImageView
        android:id="@+id/activity_create__account_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/activity_create_account_til_email"
        app:layout_constraintTop_toTopOf="@+id/activity_create_account_til_email"
        app:srcCompat="@drawable/tick_2x" />

    <ImageView
        android:id="@+id/activity_create__account_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/activity_create_account_til_password"
        app:layout_constraintTop_toTopOf="@+id/activity_create_account_til_password"
        app:srcCompat="@drawable/tick_2x" />

    <ImageView
        android:id="@+id/activity_create__account_imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="292dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/activity_create_account_til_password_repeat"
        app:layout_constraintTop_toTopOf="@+id/activity_create_account_til_password_repeat"
        app:srcCompat="@drawable/tick_2x" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="#1FFFFFFF"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/activity_create_account_title"
        android:layout_width="348dp"
        android:layout_height="68dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/activity_create_title"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>